# app/views/sessions/new.html.erb
<%= form_with model: @session, local: true do |form| %>
    <% if @session.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>
  
        <ul>
          <% @session.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :patient_name %>
      <%= form.text_field :patient_name %>
    </div>
  
    <div class="field">
      <%= form.label :date %>
      <%= form.date_select :date %>
    </div>
  
    <div class="field">
      <%= form.label :amount %>
      <%= form.number_field :amount %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>