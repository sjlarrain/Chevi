
<%= form_with model: @session, local: true do |form| %>
    <% if @session.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>
  
        <ul>
          <% @session.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    

  <%= form_with(model: @session, local: true) do |f| %>
    <div class="field">
      <%= f.label :patient_rut, "Patient Name" %>
      <%= f.collection_select :patient_rut, Patient.all, :rut, :name, prompt: "Select a patient" %>
  </div>

  
    <div class="field">
      <%= f.label :date %>
      <%= f.text_field :date, id: "session_date", class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :amount %>
      <%= form.number_field :amount %>
    </div>
    <% end %>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

  <div>
  <%= link_to "Create New Patient", new_patient_path, class: "btn btn-primary" %>
  </div>