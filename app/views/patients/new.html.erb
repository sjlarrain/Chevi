# app/views/patients/new.html.erb
<%= form_with model: @patient, local: true do |form| %>
    <% if @patient.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
  
        <ul>
          <% @patient.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%= form.label :rut %>
      <%= form.text_field :rut %>
    </div>
  
    <div class="field">
      <%= form.label :mother_name %>
      <%= form.text_field :mother_name %>
    </div>
  
    <div class="field">
      <%= form.label :contact %>
      <%= form.text_field :contact %>
    </div>
  
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
  
    <div class="field">
      <%= form.label :address %>
      <%= form.text_area :address %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>